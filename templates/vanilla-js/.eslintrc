{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },
    "extends": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "class-methods-use-this": [
            "off"
        ],
        "prefer-promise-reject-errors": [
            "off"
        ],
        "no-return-assign": [
            "off"
        ],
        "import/prefer-default-export": [
            "off"
        ],
        "no-param-reassign": [
            "off"
        ],
        "no-new": [
            "off"
        ]
    }
}